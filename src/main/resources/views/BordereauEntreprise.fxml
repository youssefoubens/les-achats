<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="net.youssef.gestion_achats.controller.BordereauEnreprise">
    <VBox alignment="CENTER" spacing="10" stylesheets="/views/manageproduct.css">

        <HBox alignment="CENTER" spacing="10" styleClass="hbox">
            <Button fx:id="uploadButton" text="Upload Bordereau d'entreprise" onAction="#handleUpload" />
            <Button fx:id="saveButton" text="Save" onAction="#saveItems" />
            <ProgressBar fx:id="progressBar" visible="false" prefWidth="200" />
        </HBox>

        <TableView fx:id="productTableView" styleClass="table-view" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" text="DS" prefWidth="200" />
                <TableColumn fx:id="familleColumn" text="Famille" prefWidth="100" />
                <TableColumn fx:id="nBrdVeColumn" text="N° BRD VE" prefWidth="100" />
                <TableColumn fx:id="nBrdColumn" text="N° BRD" prefWidth="100" />
                <TableColumn fx:id="designationColumn" text="DESIGNATION" prefWidth="100" />
                <TableColumn fx:id="unityColumn" text="U" prefWidth="100" />
                <TableColumn fx:id="quantityColumn" text="Qté" prefWidth="100" />
            </columns>
        </TableView>

    </VBox>
</AnchorPane>
