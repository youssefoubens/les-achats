<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.youssef.gestion_achats.controller.AddOfferDialogController" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Description:"/>
    <TextField fx:id="descriptionField" GridPane.columnIndex="1"/>

    <Label text="Fournisseur:" GridPane.rowIndex="1"/>
    <TextField fx:id="fournisseurField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Article:" GridPane.rowIndex="2"/>
    <TextField fx:id="articleField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Sous Article:" GridPane.rowIndex="3"/>
    <TextField fx:id="sousArticleField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Sous Sous Article:" GridPane.rowIndex="4"/>
    <TextField fx:id="sousSousArticleField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Button text="Save" onAction="#saveOffer" GridPane.rowIndex="5" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
    <Button text="Cancel" onAction="#cancel" GridPane.rowIndex="6" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
</GridPane>