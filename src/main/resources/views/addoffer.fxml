<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.Double?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.youssef.gestion_achats.controller.AddOfferDialogController" stylesheets="/views/addoffer.css">
    <VBox fx:id="mainVBox" spacing="20" styleClass="vbox">
        <GridPane alignment="CENTER" hgap="5" vgap="15" styleClass="grid-pane">
            <Label text="Bordereau:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="bordereauComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Select Article:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="articleComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Select Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="typeComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Select SousArticle:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="sousArticleComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Select SousSousArticle:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="sousSousArticleComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Select AjouteEntreprise:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <ComboBox fx:id="ajouteentrepriseComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Select Fournisseur:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <ComboBox fx:id="fournisseurComboBox" GridPane.rowIndex="6" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Description:" GridPane.rowIndex="7" GridPane.columnIndex="0" styleClass="label"/>
            <TextField fx:id="descriptionField" styleClass="text-field" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <Label text="Price:" GridPane.rowIndex="8" GridPane.columnIndex="0" styleClass="label"/>
            <TextField fx:id="priceField" styleClass="text-field" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

            <Button fx:id="selectFilesButton" text="Ajouter les piÃ¨ces jointes" onAction="#selectFiles" styleClass="button"
                    GridPane.rowIndex="9" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

            <TextArea fx:id="pieceJointeData"  styleClass="text-area" GridPane.rowIndex="10" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

            <Button text="Save" onAction="#saveOffer" styleClass="button" GridPane.rowIndex="11" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
        </GridPane>
    </VBox>

    <!-- Anchor constraints for centering the VBox -->
    <AnchorPane.leftAnchor>
        <Double fx:value="250.0" />
    </AnchorPane.leftAnchor>
    <AnchorPane.rightAnchor>
        <Double fx:value="50.0" />
    </AnchorPane.rightAnchor>
    <AnchorPane.topAnchor>
        <Double fx:value="0.0" />
    </AnchorPane.topAnchor>
    <AnchorPane.bottomAnchor>
        <Double fx:value="0.0" />
    </AnchorPane.bottomAnchor>
</AnchorPane>
