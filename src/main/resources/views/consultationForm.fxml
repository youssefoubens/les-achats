<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="1000" prefHeight="600"  fx:controller="net.youssef.gestion_achats.controller.ConsultationFormController" stylesheets="/views/consultationForm.css">
    <GridPane alignment="CENTER" hgap="10" vgap="10" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label text="Select Article:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="articleComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Select Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="typeComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Select SousArticle:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="sousArticleComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Select SousSousArticle:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="sousSousArticleComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Select Fournisseur:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="fournisseurComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Email Subject:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextArea fx:id="emailSubject" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.rowSpan="1" />

        <Label text="Email Content:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextArea fx:id="emailContent" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.rowSpan="2"/>

        <Button text="Send Email" onAction="#sendEmail" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    </GridPane>
</AnchorPane>
