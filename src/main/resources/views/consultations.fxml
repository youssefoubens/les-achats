<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.youssef.gestion_achats.controller.ConsultationController" stylesheets="/views/consultations.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <TableView fx:id="consultationTable" layoutX="15.0" layoutY="5.0" prefWidth="1000" prefHeight="500" styleClass="consultation-table">
            <columns>

                <TableColumn fx:id="articleColumn" text="Article" prefWidth="200" />
                <TableColumn fx:id="sarticleColumn" text="Sous-Article" prefWidth="200" />
                <TableColumn fx:id="ssarticleColumn" text="Sous-Sous-Article" prefWidth="200" />
                <TableColumn fx:id="fournisseurColumn" text="Fournisseur" prefWidth="250" />
                <TableColumn fx:id="piecesJointesColumn" text="Pieces Jointes" prefWidth="250" />
                <TableColumn fx:id="dateConsultationColumn" text="Date Consultation" prefWidth="150" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
