<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.youssef.gestion_achats.controller.DashboardController">
    <left>
        <VBox spacing="10" styleClass="sidebar" alignment="CENTER">
            <ImageView fx:id="logoImageView" fitWidth="150" preserveRatio="true" styleClass="logo"/>
            <VBox fx:id="buttonContainer" spacing="10" alignment="CENTER" VBox.vgrow="ALWAYS">
                <Button text="Home" onAction="#showHome" />
                <Button text="Liste des Consultations" onAction="#viewConsultations" />
                <Button text="Offre des Fournisseurs" onAction="#viewOffers" />
                <Button text="Consulter" onAction="#consult" />
            </VBox>
            <Button text="Exit" onAction="#exitApplication" styleClass="exit-button"/>
        </VBox>
    </left>
    <center>
        <AnchorPane fx:id="contentPane" />
    </center>
</BorderPane>
