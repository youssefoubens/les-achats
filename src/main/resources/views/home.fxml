<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="1000" prefHeight="600" xmlns:jfx="http://jfoenix.com/jfoenix" fx:controller="net.youssef.gestion_achats.controller.HomeController" stylesheets="/views/home.css" styleClass="anchor-pane">
    <padding>
        <Insets top="20" right="20" bottom="30" left="20"/>
    </padding>

    <!-- Title at the top -->
    <Label text="VINCI est un leader mondial des concessions, de l’énergie et de la construction"
           style="-fx-font-size: 24px; -fx-text-fill: #2c3e50;" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"/>

    <!-- Center the GridPane within the AnchorPane -->
    <GridPane alignment="CENTER" hgap="120" vgap="120" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="80.0" AnchorPane.bottomAnchor="60.0">
        <!-- Card for "Add Offer" -->
        <VBox alignment="CENTER" styleClass="card" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <ImageView fitWidth="64" fitHeight="64" pickOnBounds="true" preserveRatio="true" styleClass="icon">
                <image>
                    <Image url="@/images/add_offer_icon.png"/> <!-- Path to the icon in the resources folder -->
                </image>
            </ImageView>
            <Label text="Add Offer" styleClass="description"/>
            <JFXButton text="Add Offer" onAction="#addOffre" styleClass="green-button"/>
        </VBox>

        <!-- Card for "Manage Suppliers" -->
        <VBox alignment="CENTER" styleClass="card" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <ImageView fitWidth="64" fitHeight="64" pickOnBounds="true" preserveRatio="true" styleClass="icon">
                <image>
                    <Image url="@/images/manage_suppliers_icon.png"/> <!-- Path to the icon in the resources folder -->
                </image>
            </ImageView>
            <Label text="Manage Suppliers" styleClass="description"/>
            <JFXButton text="Manage Suppliers" onAction="#manageFournisseurs" styleClass="green-button"/>
        </VBox>

        <!-- Card for "Manage Products" -->
        <VBox alignment="CENTER" styleClass="card" GridPane.columnIndex="2" GridPane.rowIndex="0">
            <ImageView fitWidth="64" fitHeight="64" pickOnBounds="true" preserveRatio="true" styleClass="icon">
                <image>
                    <Image url="@/images/manage_products_icon.png"/> <!-- Path to the icon in the resources folder -->
                </image>
            </ImageView>
            <Label text="Manage Products" styleClass="description"/>
            <JFXButton text="Manage Products" onAction="#manageProduits" styleClass="green-button"/>
        </VBox>
    </GridPane>

    <!-- Footer at the bottom -->
    <HBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="10.0" styleClass="footer">
        <Label text="© 2024 Vinci Group" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
        <Label text="Leading in Concessions, Energy, and Construction" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
        <Label text="Contact: info@vinci.com" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
        <ImageView fitHeight="24" fitWidth="24">
            <image>
                <Image url="/images/logo.png"/> <!-- Replace with path to your company logo -->
            </image>
        </ImageView>
        <HBox spacing="10">
            <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/images/facebook.png"/> <!-- Replace with path to Facebook icon -->
                </image>
            </ImageView>

            <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/images/linkedin.png"/> <!-- Replace with path to LinkedIn icon -->
                </image>
            </ImageView>
        </HBox>
    </HBox>

</AnchorPane>
