<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="net.youssef.gestion_achats.controller.ManageProductsController">
    <VBox alignment="CENTER" spacing="10" stylesheets="/views/style1.css">
        <HBox alignment="CENTER" spacing="10" styleClass="hbox">
            <TextField fx:id="nameField" promptText="Name" styleClass="text-field" />
            <TextField fx:id="unityField" promptText="Unity" styleClass="text-field" />
            <TextField fx:id="quantityField" promptText="Quantity" styleClass="text-field" />
            <TextField fx:id="priceField" promptText="Price" styleClass="text-field" />
            <TextField fx:id="totalPriceField" promptText="Total Price" styleClass="text-field" />
        </HBox>

        <HBox alignment="CENTER" spacing="10" styleClass="hbox">
            <TextField fx:id="typeNameField" promptText="Type Name" styleClass="text-field" />
            <Label text="Select Article:" />
            <ComboBox fx:id="articleComboBox" promptText="Select Article" />

            <Label text="Select Article Type:" />
            <ComboBox fx:id="articleTypeComboBox" promptText="Select Article Type" />

            <Label text="Select Sub Article:" />
            <ComboBox fx:id="sArticleComboBox" promptText="Select Sub Article" />
        </HBox>

        <HBox alignment="CENTER" spacing="10" styleClass="hbox">
            <Button text="Add Article" onAction="#addArticle" styleClass="button" />
            <Button text="Add Article Type" onAction="#addArticleType" styleClass="button" />
            <Button text="Add Sub-Article" onAction="#addSArticle" styleClass="button" />
            <Button text="Add Sub-Sub-Article" onAction="#addSSArticle" styleClass="button" />
            <Button text="Modify" onAction="#modifyProduct" styleClass="button" />
            <Button text="Delete" onAction="#deleteProduct" styleClass="button" />
        </HBox>

        <TableView fx:id="productTableView" styleClass="table-view" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="100" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="200" />
                <TableColumn fx:id="unityColumn" text="Unity" prefWidth="100" />
                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100" />
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="100" />
                <TableColumn fx:id="totalPriceColumn" text="Total Price" prefWidth="100" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
